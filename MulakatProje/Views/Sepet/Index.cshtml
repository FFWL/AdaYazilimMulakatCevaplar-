@model List<MulakatProje.Models.Entity.Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ürün Adı</th>
            <th scope="col">Fiyatı (₺)</th>
            <th scope="col">Açıklama</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <th scope="row">@item.UrunID</th>
                <td>@item.UrunAd ₺</td>
                <td>@item.UrunFiyat</td>
                <td><img style="width:100px; height:100px;" src="@item.UrunImg" /></td>
            </tr>
        </tbody>
    }
</table>

